<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local1="clr-namespace:MyApp.UserControlWindows"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{x:Null}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        MouseMove="Window_MouseOver"
        Title="MainWindow" MinHeight="600" MinWidth="950" MaxWidth="950" MaxHeight="650" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Width="830" Height="544" >
    <!--Click and drag mogucnost-->
    <Window.BindingGroup>
        <BindingGroup/>
    </Window.BindingGroup>
    <materialDesign:DialogHost x:Name="MainDialogHost" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid  Background="#2b648c">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <!--Plan je da bude nevidljiv svaki put kada predje na UserControl, vraca se pozivom-->
            <Grid Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="3" x:Name="User_Grid" Visibility="Collapsed">
                <Grid Grid.ColumnSpan="2" Grid.RowSpan="3" Grid.Row="1">
                    <local1:YoutubeUser x:Name="YoutubeUser" HorizontalAlignment="Stretch"  Visibility="Hidden" x:FieldModifier="public" VerticalAlignment="Stretch" />
                </Grid>

                <Grid Grid.ColumnSpan="2" Grid.RowSpan="3" Grid.Row="1">
                    <local1:MusicUser x:Name="MusicUser" HorizontalAlignment="Stretch"  Visibility="Hidden" VerticalAlignment="Stretch" x:FieldModifier="public" />
                </Grid>

                <Grid Grid.ColumnSpan="2" Grid.RowSpan="3" Grid.Row="1">
                    <local1:QuotesUser x:Name="QuotesUser" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"  Visibility="Hidden" x:FieldModifier="public" />
                </Grid>

                <Grid Grid.ColumnSpan="2" Grid.RowSpan="3" Grid.Row="1">
                    <local1:MoviesUser x:Name="MoviesUser" VerticalAlignment="Stretch" Margin="-6,7,-3,-2" HorizontalAlignment="Stretch" Visibility="Hidden" x:FieldModifier="public" Background="#FFBB6363" />
                </Grid>
            </Grid>

            <!--Ideja tranzicije imitirajuci talase, krecu tranzicije od lokacije klika, 1 za prekrivanje quotesgrid ; 2 za prikaz usergrid-->
            <Grid Grid.ColumnSpan="2" Grid.Row="1" x:Name="Items_Grid" Grid.RowSpan="3" Visibility="Visible">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="10px"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="10px"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <materialDesign:ColorZone Grid.Row="1" Grid.ColumnSpan="3" Padding="20"  Mode="Standard" Background="#1f354f" BorderBrush="Transparent" Margin="1,0"  >
                </materialDesign:ColorZone>

                <materialDesign:ColorZone Grid.RowSpan="3" Grid.Column="1" Padding="20"  Mode="Standard" Background="#1f354f" BorderBrush="Transparent" VerticalAlignment="Stretch" Margin="0,0,0,1"  >
                </materialDesign:ColorZone>

                <Grid Grid.ColumnSpan="1" Background="#f0f0f0" Grid.Row="0" Margin="1,0,0,0">
                    <Image Source="images/neonback.jpg" Stretch="Fill"></Image>
                    <Grid Width="150" Height="110">
                        <Image Source="images/ytbutton.png"></Image>
                        <Button Height="150"
                                Background="Transparent" 
                                Click="Youtube_Click"
                                BorderThickness="0">
                        </Button>
                    </Grid>
                </Grid>

                <Grid Grid.Column="2"  Grid.Row="0" Margin="0,0,1,0">
                    <Image Source="images/musicback.png" Stretch="Fill"></Image>
                </Grid>

                <Grid Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1,0,0,1" >
                    <Image 
                          x:Name="timokSlika" Source="images/qback3.png"
                          Visibility="Visible" Stretch="Fill" />
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,0,70" Width="150">
                        <Button
                            Click="Quotes_Click"
                            Background="#1c1c1c"
                            BorderThickness="0"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            Width="150"
                            ToolTip="Resource name: MaterialDesignRaisedLightDarkButton">
                            quotes
                        </Button>
                    </Grid>
                </Grid>

                <Grid Grid.Row="2" Grid.Column="1" >
                </Grid>
            </Grid>




            <materialDesign:DrawerHost HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="2" BorderBrush="{DynamicResource MaterialDesignDivider}" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="-2,-2,-3,-2.429" >
                <materialDesign:DrawerHost.LeftDrawerContent>
                    <StackPanel Margin="0" >
                        <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" 
                                  ToolTip="Zatvaranje trenutnog menija"
                                  Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                                  CommandParameter="{x:Static Dock.Left}"
                                  DockPanel.Dock="Top"
                                  HorizontalAlignment="Right" Margin="20"
                                  IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}" />

                        <Menu >
                            <MenuItem Header="Početna" Width="230" Name="Home" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}" >
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="Home"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </Menu>
                        <Menu >
                            <MenuItem Header="Vinograd" Width="230" Name="Vineyard"  HorizontalAlignment="Center" >
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="ViewList"/>
                                </MenuItem.Icon>
                                <MenuItem x:Name="ekl" Header="E.K.L" Width="230" ToolTip="Eksterna Kontrolna Laboratorija">
                                    <MenuItem x:Name="IzveštajNew" Header="Novi Izveštaj"  Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="FileDocument" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem x:Name="IzvestajOpen" Header="Otvori.."  Command="ApplicationCommands.Open" >
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="OpenInApp" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem x:Name="IzvestajSave" Header="Sačuvaj kao.." Command="ApplicationCommands.Save" x:FieldModifier="public">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="ContentSaveAll"  />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem x:Name="IzvestajExit" Header="Izađi"   Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="ExitToApp" />
                                        </MenuItem.Icon>
                                    </MenuItem>

                                </MenuItem>
                                <MenuItem x:Name="dostava" Header="Podaci o dostavi" Width="230" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}">

                                </MenuItem >
                            </MenuItem>
                        </Menu>
                        <Menu >
                            <MenuItem x:Name="pvd" Header="P.V.D" ToolTip="Prozivodnja vina i destilacija" Width="230" HorizontalAlignment="Center">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="ViewList"/>
                                </MenuItem.Icon>
                                <MenuItem x:Name="psp" Header="P.S.P" ToolTip="Podac o snabdevu proizvodnje" Width="230" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}" >

                                </MenuItem>
                            </MenuItem>
                        </Menu>
                        <Menu >
                            <MenuItem x:Name="poDru" Header="Podrum" Width="230">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="ViewList"/>
                                </MenuItem.Icon>
                                <MenuItem x:Name="ostvPr" Header="P.O.P" ToolTip="Podaci ostvarenje proizvodnje" Width="230" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}" >

                                </MenuItem>
                            </MenuItem>
                        </Menu>
                        <Menu >
                            <MenuItem Header="HACCP" ToolTip="HACCP sertifikat" Width="230" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}" >
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="ViewList"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </Menu>
                        <Menu>
                            <MenuItem x:Name="Logistika" Header="Logistika" Width="230" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}" >
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="ViewList"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </Menu>
                    </StackPanel>
                </materialDesign:DrawerHost.LeftDrawerContent>

                <Grid MinWidth="480" MinHeight="480">
                    <DockPanel Grid.RowSpan="2" Grid.ColumnSpan="2">
                        <materialDesign:ColorZone  Padding="20" materialDesign:ShadowAssist.ShadowDepth="Depth3" Mode="Standard" DockPanel.Dock="Top" BorderBrush="Transparent" Height="86"  >
                            <DockPanel Grid.RowSpan="2" Grid.ColumnSpan="9" >
                                <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" IsChecked="False"
                                  ToolTip="Odabir poslova"
                                  x:Name="MenuToggleButton"
                                  Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                                  CommandParameter="{x:Static Dock.Left}" />

                                <materialDesign:PopupBox  DockPanel.Dock="Right" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" ToolTip="Više opcija"  >
                                    <StackPanel Width="150" >
                                        <Button x:Name="pomoc" Content="Pomoc"/>
                                        <Button Content="Odjavljivanje"  />
                                        <Separator/>
                                        <Button Content="Izlaz" Name="popUpIzlaz"/>
                                    </StackPanel>
                                </materialDesign:PopupBox>
                                <TextBlock x:Name="header" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="TimesNewRoman"  FontSize="22">CHIIIIIIL ZONE</TextBlock>

                            </DockPanel>
                        </materialDesign:ColorZone>
                    </DockPanel>
                </Grid>
            </materialDesign:DrawerHost>
        </Grid>
    </materialDesign:DialogHost>
</Window>
