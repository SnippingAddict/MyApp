<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:local1="clr-namespace:MyApp.UserControlWindows"
        WindowStyle="None"
        mc:Ignorable="d"
        DragOver="Window_DragOver"
        Title="MainWindow" Height="490.211" Width="820.605" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen">
    <Window.BindingGroup>
        <BindingGroup/>
    </Window.BindingGroup>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <materialDesign:ColorZone
            Grid.ColumnSpan="2"
  Background="#428bff"
  Padding="16" Height="73" Margin="-4,-4,-4,0"  >
            <DockPanel>
                <!--<materialDesign:PopupBox
                    
      DockPanel.Dock="Right"
      PlacementMode="BottomAndAlignRightEdges">
                    <materialDesign:PopupBox.ToggleContent>
                        <materialDesign:PackIcon Kind="Cogs"  Foreground="#FFE0E0E0"/>
                    </materialDesign:PopupBox.ToggleContent>
                    <ListBox>
                        <ListBoxItem>
                            Hello World
                        </ListBoxItem>
                        <ListBoxItem>
                            Nice Popup
                        </ListBoxItem>
                        <ListBoxItem>
                            Goodbye.
                        </ListBoxItem>
                    </ListBox>
                </materialDesign:PopupBox>-->
                <Button
                    Width="35"
                    Height="35"
                    DockPanel.Dock="Right"
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    Background="#ffff6e"
                    BorderBrush="#ffff6e"
                    Foreground="#474747"
                    
  Style="{StaticResource MaterialDesignFloatingActionLightButton}"
  ToolTip="MaterialDesignFloatingActionLightButton">

                    <materialDesign:PackIcon
    Kind="Build"
    Height="16"
    Width="16" />
                </Button>
                <StackPanel
      Orientation="Horizontal">
                    <ToggleButton
                        Foreground="#f0f0f0"
        Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />
                    <TextBlock
                        Foreground="#f0f0f0"
        VerticalAlignment="Center" 
        Margin="16 0 0 0" Height="18">
            MyApp
                    </TextBlock>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <Grid Grid.Column="0"  Grid.RowSpan="2" Margin="-4,69,0,0">
            <local1:YoutubeUser x:Name="YoutubeUser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Visible" x:FieldModifier="public"/>
        </Grid>

        <Grid Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="2" Margin="-4,69,0,0">
            <local1:MusicUser x:Name="MusicUser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Visible" x:FieldModifier="public" Margin="4,0,-4,0"/>
        </Grid>

        <Grid Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="2" Margin="-4,0,4,-4">
            <local1:QuotesUser x:Name="QuotesUser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Visible" x:FieldModifier="public" Margin="0,0,-4,0"/>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,-4">
            <local1:MoviesUser x:Name="MoviesUser" VerticalAlignment="Stretch" Visibility="Visible" x:FieldModifier="public" Margin="0,0,-4,0" Background="#FFBB6363"/>
        </Grid>

    </Grid>
</Window>
